<?xml version='1.0' encoding='utf-8'?>
<widget id="com.odddivision.littledragon" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>LittleDragon</name>
    <description>
        Interface for Little Dragon musical interface.
    </description>
    <author email="jeff@odddivision.com" href="http://odddivisino.com">
        Jeff Crouse | Odd Division
    </author>
    
    <content src="http://192.168.2.6" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <preference name="xwalkCommandLine" value="--ignore-gpu-blacklist" />
    <preference name="Orientation" value="landscape" />
    <preference name="Fullscreen" value="true" />
    <icon src="res/icon.png" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-crosswalk-webview" spec="^1.2.0" />
    <plugin name="cordova-plugin-vibration" spec="^1.1.0" />
    <plugin name="nl.sylvain.cordova.osc" spec="https://github.com/sy1vain/cordova-osc-plugin.git" />
    <engine name="android" spec="^4.0.0" />
    <engine name="ios" spec="^3.8.0" />
</widget>
