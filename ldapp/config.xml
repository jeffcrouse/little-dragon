<?xml version='1.0' encoding='utf-8'?>
<widget id="com.odddivision.littledragon" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>LittleDragon</name>
    <description>
        Mobile app to run on Samsung devices for the Little Dragon instrument
    </description>
    <author email="jeff@odddivision.com" href="http://www.odddivision.com">
        Jeff Crouse
    </author>
    <content src="index.html" />
    <icon src="res/icon.png" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="android" spec="^4.0.0" />
    <engine name="ios" spec="^3.8.0" />
    <plugin name="cordova-plugin-crosswalk-webview" spec="^1.2.0" />
    <plugin name="cordova-plugin-vibration" spec="^1.1.0" />
    <plugin name="nl.sylvain.cordova.osc" spec="https://github.com/sy1vain/cordova-osc-plugin.git" />
    <plugin name="com.triggertrap.ZeroConf" spec="https://github.com/vstirbu/ZeroConf" />
    <plugin name="org.apache.cordova.device" spec="^0.3.0" />
    <plugin name="nl.x-services.plugins.insomnia" spec="https://github.com/EddyVerbruggen/Insomnia-PhoneGap-Plugin.git" />
    <plugin name="cordova-plugin-network-information" spec="https://git-wip-us.apache.org/repos/asf/cordova-plugin-network-information.git" />
    
    <preference name="Orientation" value="landscape" />
    <preference name="xwalkCommandLine" value="--ignore-gpu-blacklist" />
    <preference name="Fullscreen" value="true" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="BackupWebStorage" value="local" />

</widget>
